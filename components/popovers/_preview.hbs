<body>

    <main>
        {{!-- Underneath will render component output --}}
        {{{ yield }}}
    </main>

    {{> '@tpl-scripts' }}

    <script>
        $('[data-toggle="popover"]').popover({
            trigger: 'click'
        }).keyup(function (event) {
            if (event.key == 'Escape') {
                $(this).popover('hide');
            }
        })
    </script>

</body>

